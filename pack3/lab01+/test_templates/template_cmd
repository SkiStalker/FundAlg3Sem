if [ $# -ne 3 ]
then
    echo "Incorrect test usage. Expected <exec file with args> <return code> <line with console output message>"
    exit 1
fi

ret=$2

if (( ret < 0 ))
then
    ret=$(( 256 + ret ))
fi

res=$($(pwd)/$1 2>&1)
ret_code=$?

res=$(echo "$res" | tr -d '\n' | xargs)
expected_output=$(echo "$3" | tr -d '\n' | xargs)

if [[ "$res" == "$expected_output" && "$ret_code" -eq "$ret" ]]
then
    exit 0
else
    echo "Passed args:"
    echo "$*"
    echo "Incorrect answer: expected output=\"$expected_output\", received=\"$res\", expected return code=\"$ret\", received=\"$ret_code\""
    exit 2
fi
